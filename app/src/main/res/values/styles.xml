<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#ff669900</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.Start" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/icon_lauch</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="VideoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="PopupWindow_Style1" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_window1_in</item>
        <item name="android:windowExitAnimation">@anim/pop_window1_out</item>
    </style>

    <style name="PopupWindow_Style2">
        <item name="android:windowEnterAnimation">@anim/pop_window2_in</item>
        <item name="android:windowExitAnimation">@anim/pop_window2_out</item>
    </style>

    <style name="TranslucentBgTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--main activity radio button style-->
    <style name="Main_RB_Style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/font_focus_1</item>
    </style>

    <style name="Audio_RB_Style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/videoNavPadding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/font_focus_1</item>
    </style>

    <style name="EmoJe_EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">6</item>
        <item name="android:padding">5dp</item>
    </style>


</resources>
