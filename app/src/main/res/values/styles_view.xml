<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditUserInfoItemStyle">
        <item name="android:layout_height">@dimen/editUserInfo_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/editUserInfo_item_marginLeft</item>
    </style>

    <!-- 视听item -->
    <style name="VideoItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/videoItemDrawablePadding</item>
        <item name="android:textColor">@color/font_color3</item>
        <item name="android:textSize">@dimen/describe_font_size1</item>
    </style>

    <style name="LoginEditStyle">
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lr_edt_height</item>
        <item name="android:textColor">@color/font_color5</item>
        <item name="android:textColorHint">@color/font_color9</item>
        <item name="android:textSize">@dimen/content_font_size</item>
    </style>

    <style name="BtnStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lr_btn_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/content_font_size2</item>
        <item name="cornerRadius">@dimen/btn_cornerRadius</item>
        <item name="clickBackground">@color/bg_click_color</item>
        <item name="clickFontColor">@color/font_click_color</item>
        <item name="disabledBackground">@color/bg_disable_color</item>
        <item name="disabledFontColor">@color/font_disable_color</item>
        <item name="defaultBackground">@color/bg_enable_color</item>
        <item name="defaultFontColor">@color/font_enable_color</item>
    </style>

    <style name="BtnStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lr_btn_height</item>
        <item name="android:layout_marginLeft">@dimen/forget_margin2</item>
        <item name="android:layout_marginRight">@dimen/forget_margin2</item>
        <item name="android:layout_marginTop">@dimen/forget_margin2</item>
        <item name="android:background">@drawable/sel_btn</item>
        <item name="android:textSize">@dimen/content_font_size2</item>
        <item name="android:textColor">@color/font_color3</item>
    </style>

    <style name="BtnStyle3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lr_btn_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/content_font_size2</item>
        <item name="cornerRadius">@dimen/btn_cornerRadius</item>

        <item name="clickBackground">@color/bg_click_color</item>
        <item name="clickFontColor">@color/font_click_color</item>

        <item name="disabledBackground">@color/bg_click_color</item>
        <item name="disabledFontColor">@color/font_disable_color</item>

        <item name="defaultBackground">@color/bg_enable_color</item>
        <item name="defaultFontColor">@color/font_enable_color</item>
    </style>
    <style name="errorTvStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lr_error_height</item>
        <item name="android:paddingLeft">@dimen/lr_error_paddingLeft</item>
        <item name="android:textColor">@color/font_color11</item>
        <item name="android:textSize">@dimen/describe_font_size2</item>
    </style>

    <style name="PWDEditTextSize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="hintColor">@color/font_color9</item>
        <item name="textColor">@color/font_color5</item>
        <item name="textSize">@dimen/content_font_size2</item>
    </style>

    <!-- 作者界面 -->
    <style name="AuthorTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_color14</item>
    </style>
</resources>