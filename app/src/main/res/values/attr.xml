<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="clickFontColor" format="color|reference"/>
    <attr name="defaultFontColor" format="color|reference"/>
    <attr name="defaultBackground" format="color|reference"/>
    <attr name="selectedBackground" format="color|reference"/>
    <attr name="selectedFontColor" format="color|reference"/>

    <declare-styleable name="DiscolorButton">
        <attr name="clickBackground" format="color|reference"/>
        <attr name="defaultBackground"/>
        <attr name="clickFontColor"/>
        <attr name="defaultFontColor"/>
        <attr name="cornerRadius" format="dimension"/>

        <attr name="disabledBackground" format="color|reference"></attr>
        <attr name="disabledFontColor" format="color|reference"></attr>
    </declare-styleable>

    <declare-styleable name="DiscolorTextView">
        <attr name="defaultFontColor"/>
        <attr name="clickFontColor"/>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="outsideRound" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="OptionLayout">
        <attr name="rowSpace" format="dimension"/>
        <attr name="columnSpace" format="dimension"/>
        <attr name="columnCount" format="integer"/>
        <attr name="itemHeight" format="dimension"/>
        <attr name="array" format="reference"/>

        <attr name="checkBoxBackground" format="reference"/>

        <attr name="selectedFontColor"/>
        <attr name="defaultFontColor"/>
    </declare-styleable>

    <declare-styleable name="PwdEditText">
        <attr name="showPwd" format="boolean|reference"/>
        <attr name="lineColor" format="color|reference"/>
        <attr name="pwdBackground" format="reference"/>
        <attr name="eye" format="boolean|reference"/>
        <attr name="hint" format="string|reference"/>
        <attr name="text" format="string|reference"/>
        <attr name="hintColor" format="color|reference"/>
        <attr name="textColor" format="color|reference"/>
        <attr name="textSize" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="SearchEditText">
        <attr name="searchBackground" format="color|reference"/>
        <attr name="searchLeftImgSize" format="dimension|reference"/>
        <attr name="searchRightImgSize" format="dimension|reference"/>
        <attr name="searchMarginLeft" format="dimension|reference"/>
        <attr name="searchMarginRight" format="dimension|reference"/>
        <attr name="searchHint" format="string|reference"/>
        <attr name="searchText" format="string|reference"/>
        <attr name="searchTextColor" format="color|reference"/>
        <attr name="searchHintColor" format="color|reference"/>
        <attr name="searchTextSize" format="string|reference"/>
        <attr name="searchDrawablePadding" format="dimension|reference"/>
    </declare-styleable>

    <!--夜间模式-->
    <declare-styleable name="SkinnableView">
        <attr name="android:background"/>
        <attr name="android:backgroundTint"/>
    </declare-styleable>

    <declare-styleable name="SkinnableTextView">
        <attr name="android:textColor"/>
        <attr name="android:drawableLeft"/>
        <attr name="android:drawableTop"/>
    </declare-styleable>

    <declare-styleable name="SkinnableButton">
        <attr name="android:textColor"/>
    </declare-styleable>

    <declare-styleable name="SkinnableImageView">
        <attr name="android:src"/>
    </declare-styleable>

    <declare-styleable name="SkinnableRoundImageView">
        <attr name="android:src"/>
    </declare-styleable>

    <declare-styleable name="SkinnableEditText">
        <attr name="android:textColorHint"/>
    </declare-styleable>

    <declare-styleable name="SkinnableRadioButton">
        <attr name="android:drawableTop"/>
    </declare-styleable>

    <declare-styleable name="SkinnableTabLayout">
        <attr name="android:background"/>
        <attr name="tabIndicatorColor"/>
        <attr name="tabSelectedTextColor"/>
        <attr name="tabTextColor"/>
        <attr name="tabBackground"/>
    </declare-styleable>

    <declare-styleable name="SkinnableToggleButton">
        <attr name="android:button"/>
    </declare-styleable>

    <declare-styleable name="SkinnableGeneralBannerLayout">
        <attr name="selectedIndicatorColor"/>
        <attr name="unSelectedIndicatorColor"/>
    </declare-styleable>

    <declare-styleable name="SkinnableBannerLayout">
        <attr name="selectedIndicatorColor"/>
        <attr name="unSelectedIndicatorColor"/>
    </declare-styleable>

    <declare-styleable name="SkinnableSlidingTabLayoutView">
        <attr name="tl_indicator_color"/>
        <!-- underline -->
        <attr name="tl_underline_color"/>
        <!-- divider -->
        <attr name="tl_divider_color"/>
        <!-- title -->
        <attr name="tl_textSelectColor"/>
        <attr name="tl_textUnselectColor"/>
    </declare-styleable>

    <declare-styleable name="SkinnableListView">
        <attr name="android:divider"/>
    </declare-styleable>

    <declare-styleable name="SkinnableSearchEditText">
        <attr name="searchBackground"/>
        <attr name="searchTextColor"/>
        <attr name="searchHintColor"/>
    </declare-styleable>

    <declare-styleable name="MultiDirectionSlidingDrawer">
        <attr name="handle" format="dimension"/>
        <attr name="content" format="dimension"/>
        <attr name="allowSingleTap" format="boolean"/>
        <attr name="animateOnClick" format="boolean"/>
        <attr name="bottomOffset" format="dimension"/>
        <attr name="topOffset" format="dimension"/>
        <attr name="draw_direction">
            <enum name="rightToLeft" value="0"/>
            <enum name="bottomToTop" value="1"/>
            <enum name="leftToRight" value="2"/>
            <enum name="topToBottom" value="3"/>
        </attr>
    </declare-styleable>
</resources>