<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="clickFontColor" format="color|reference"/>
    <attr name="defaultFontColor" format="color|reference"/>
    <attr name="defaultBackground" format="color|reference"/>
    <attr name="selectedBackground" format="color|reference"/>
    <attr name="selectedFontColor" format="color|reference"/>

    <declare-styleable name="DiscolorButton">
        <attr name="clickBackground" format="color|reference"/>
        <attr name="defaultBackground"/>
        <attr name="clickFontColor"/>
        <attr name="defaultFontColor"/>
        <attr name="cornerRadius" format="dimension"/>

        <attr name="disabledBackground" format="color|reference"></attr>
        <attr name="disabledFontColor" format="color|reference"></attr>
    </declare-styleable>

    <declare-styleable name="DiscolorTextView">
        <attr name="defaultFontColor"/>
        <attr name="clickFontColor"/>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="outsideRound" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="OptionLayout">
        <attr name="rowSpace" format="dimension"/>
        <attr name="columnSpace" format="dimension"/>
        <attr name="columnCount" format="integer"/>
        <attr name="itemHeight" format="dimension"/>
        <attr name="array" format="reference"/>

        <attr name="checkBoxBackground" format="reference"/>

        <attr name="selectedFontColor"/>
        <attr name="defaultFontColor"/>
    </declare-styleable>
</resources>