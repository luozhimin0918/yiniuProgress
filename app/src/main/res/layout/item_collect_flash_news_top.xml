<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/flash_type4_padding"
              android:paddingRight="@dimen/flash_type4_padding"
              android:paddingTop="@dimen/flash_type4_padding">

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/sel_collect_item"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_flash"
            android:layout_width="match_parent"
            android:layout_height="@dimen/flash_type4_imgHeight"
            android:layout_marginTop="@dimen/flash_type4_imgTop"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/title_font_size"/>

        <include layout="@layout/layout_collect_flash_bottom_bar"/>
    </LinearLayout>

</LinearLayout>