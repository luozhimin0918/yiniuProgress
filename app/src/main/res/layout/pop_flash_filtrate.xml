<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme1"
    android:orientation="vertical">


    <android.support.v7.widget.SwitchCompat
        android:id="@+id/sc_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:text="开启顶部通知"
        android:textColor="@color/font_color60"/>

    <include layout="@layout/view_line"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/sc_sound"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:text="开启声音"
        android:textColor="@color/font_color60"/>

    <include layout="@layout/view_line"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/sc_high"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:text="只看重要"
        android:textColor="@color/font_color60"/>

    <include layout="@layout/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="18dp"
            android:text="多空判断"
            android:textColor="@color/font_color60"
            android:textSize="@dimen/describe_font_size3"/>

        <com.jyh.kxt.base.widget.OptionLayout
            android:id="@+id/ol_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            app:array="@array/flash_silver"
            app:checkBoxBackground="@drawable/bg_classify_default1"
            app:columnSpace="18dp"

            app:defaultFontColor="@color/font_color5"
            app:itemHeight="35dp"
            app:selectedFontColor="@color/white"/>

    </LinearLayout>

    <include layout="@layout/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/font_color5"
            android:textSize="@dimen/title_font_size"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/line_color3"/>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/font_color8"
            android:textSize="@dimen/title_font_size"/>
    </LinearLayout>
</LinearLayout>