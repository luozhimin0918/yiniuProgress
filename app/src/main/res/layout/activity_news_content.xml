<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme1"
    android:orientation="vertical">

    <com.library.widget.handmark.PullToRefreshListView
        android:id="@+id/rv_message"
        android:layout_width="match_parent"
        android:layout_above="@+id/ll_nav"
        android:layout_height="match_parent" />


    <LinearLayout
        android:id="@+id/ll_nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/videoNavHeight"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_break"
            style="@style/Audio_RB_Style"
            android:src="@mipmap/icon_nav_break"/>

        <ImageView
            android:id="@+id/iv_comment"
            style="@style/Audio_RB_Style"
            android:src="@mipmap/icon_nav_commend"/>

        <ImageView
            android:id="@+id/iv_collect"
            style="@style/Audio_RB_Style"
            android:src="@mipmap/icon_nav_collect_unsel"/>

        <ImageView
            android:id="@+id/iv_ding"
            style="@style/Audio_RB_Style"
            android:src="@mipmap/icon_nav_like_unsel"/>

        <ImageView
            android:id="@+id/iv_share"
            style="@style/Audio_RB_Style"
            android:src="@mipmap/icon_nav_more"/>

    </LinearLayout>


</RelativeLayout>