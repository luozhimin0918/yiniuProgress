<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.jyh.kxt.base.util.emoje.view.EmoticonsEditText
        android:id="@+id/eet_content"
        style="@style/EmoJe_EditText"
        android:hint="请输入回复">

    </com.jyh.kxt.base.util.emoje.view.EmoticonsEditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_emoji"
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_height="25dp"
            android:src="@color/blue"/>

        <TextView
            android:id="@+id/tv_max_length"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_publish"
            android:gravity="center"
            android:text="144"/>

        <com.jyh.kxt.base.custom.DiscolorButton
            android:id="@+id/tv_publish"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            android:gravity="center"
            android:text="发布"

            app:clickBackground="@android:color/transparent"
            app:clickFontColor="@color/blue"

            app:defaultBackground="@android:color/transparent"
            app:defaultFontColor="@color/black"/>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fl_emoje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
</LinearLayout>