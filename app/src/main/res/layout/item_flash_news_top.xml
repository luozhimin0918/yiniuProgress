<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/flash_type4_padding"
              android:paddingRight="@dimen/flash_type4_padding"
              android:paddingTop="@dimen/flash_type4_padding">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/flash_type4_marginRight"
        android:maxLines="3"
        android:text="16:30"
        android:textSize="@dimen/describe_font_size2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_flash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈哈哈
            哈
            哈
            啊
            哈哈哈哈
            哈
            哈哈哈哈哈哈哈哈"
            android:textSize="@dimen/content_font_size"/>

        <include layout="@layout/layout_flash_bottom_bar"/>
    </LinearLayout>

</LinearLayout>