<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_list_nav"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="41dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_list_nav"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name_nav"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:text="名称"
            android:textColor="@color/font_color60"
            android:textSize="@dimen/describe_font_size3"/>

        <TextView
            android:id="@+id/tv_new_price_nav"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最新价"
            android:textColor="@color/font_color60"
            android:textSize="@dimen/describe_font_size3"/>

        <TextView
            android:id="@+id/tv_target_nav"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="涨跌幅"
            android:textColor="@color/font_color60"
            android:textSize="@dimen/describe_font_size3"/>
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_list_nav"
        android:background="@color/bg_color2"/>
</RelativeLayout>