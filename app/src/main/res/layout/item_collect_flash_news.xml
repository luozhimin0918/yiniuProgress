<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/flash_type1_padding"
              android:paddingRight="@dimen/flash_type1_padding"
              android:paddingTop="@dimen/flash_type1_padding">

    <FrameLayout
        android:id="@+id/fl_del"
        android:layout_width="@dimen/collect_del_width"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_collect_item"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/flash_type1_marginRight"
            android:maxLines="3"
            android:text="16:30"
            android:textSize="@dimen/describe_font_size2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="哈哈哈哈哈哈
            哈
            哈
            啊
            哈哈哈哈
            哈
            哈哈哈哈哈哈哈哈"
                android:textSize="@dimen/title_font_size"/>

            <include layout="@layout/layout_flash_bottom_bar"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>