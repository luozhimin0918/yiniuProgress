<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_flash_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        android:padding="@dimen/newsContentPadding3"
        android:textColor="@color/font_color5"
        android:textSize="@dimen/content_font_size2"/>

    <TextView
        android:id="@+id/tv_flash_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="1dp"
        android:paddingLeft="@dimen/newsContentPadding3"
        android:paddingRight="@dimen/newsContentPadding3"
        android:paddingBottom="@dimen/newsContentPadding3"
        android:textColor="@color/font_color5"
        android:textSize="@dimen/content_font_size"/>


</LinearLayout>