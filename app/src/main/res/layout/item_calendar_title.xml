<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@mipmap/iocn_blue_sx"
        android:gravity="center"
        android:text="数据走势"
        android:textColor="@color/font_color60"
        android:textSize="@dimen/title_font_size"/>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_advert2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="none"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:text="● 广告文字1"
        android:textColor="@color/font_color62"
        android:textSize="@dimen/describe_font_size2"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_advert1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:ellipsize="none"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:text="● 广告文字2"
        android:textColor="@color/font_color62"
        android:textSize="@dimen/describe_font_size2"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_ad"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="@dimen/contentPadding"
        android:src="@mipmap/icon_test"
        android:visibility="gone"/>

</LinearLayout>