<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:id="@+id/ll_rootView"
              android:paddingLeft="@dimen/lr_padding_horizontal"
              android:paddingRight="@dimen/lr_padding_horizontal">

    <com.jyh.kxt.base.widget.LineEditText
        android:id="@+id/edt_email"
        style="@style/LoginEditStyle"
        android:layout_marginTop="@dimen/lr_content_marginTop"
        android:hint="输入账号"/>

    <TextView
        android:id="@+id/tv_error_email"
        style="@style/errorTvStyle"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lr_edt_height">

        <com.jyh.kxt.base.widget.LineEditText
            android:id="@+id/edt_pwd"
            style="@style/LoginEditStyle"
            android:hint="输入密码"/>

        <TextView
            android:id="@+id/tv_forgetPwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="@color/font_color9"
            android:textSize="@dimen/describe_font_size3"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_error_pwd"
        style="@style/errorTvStyle"
        />

    <com.jyh.kxt.base.custom.DiscolorButton
        android:id="@+id/db_login"
        android:text="登录"
        android:layout_marginTop="@dimen/login_marginTop"
        style="@style/BtnStyle1"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lr_content_marginTop">

        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="@dimen/lr_umengImgSize"
            android:layout_height="@dimen/lr_umengImgSize"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:src="@mipmap/icon_user_login_qq"/>

        <ImageView
            android:id="@+id/iv_sina"
            android:layout_width="@dimen/lr_umengImgSize"
            android:layout_height="@dimen/lr_umengImgSize"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/icon_user_login_sina"/>

        <ImageView
            android:id="@+id/iv_wx"
            android:layout_width="@dimen/lr_umengImgSize"
            android:layout_height="@dimen/lr_umengImgSize"
            android:layout_gravity="right"
            android:src="@mipmap/icon_user_login_wx"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_marginTop2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:text="社交账户登录"
            android:textColor="@color/font_color8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更快更简单"
            android:textColor="@color/font_color3"/>
    </LinearLayout>
</LinearLayout>