<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/flash_type2_padding"
              android:paddingRight="@dimen/flash_type2_padding"
              android:paddingTop="@dimen/flash_type2_padding">

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/sel_collect_item"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_flash"
                android:layout_width="@dimen/flash_img_width"
                android:layout_height="@dimen/flash_img_height"
                android:src="@mipmap/ico_def_load"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="@dimen/flash_type2_padding"
                android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                android:textSize="@dimen/title_font_size"/>
        </LinearLayout>

        <include layout="@layout/layout_collect_flash_bottom_bar"/>
    </LinearLayout>

</LinearLayout>