<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/index_btn_padding">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/index_btn_imgSize"
        android:layout_height="@dimen/index_btn_imgSize"
        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/index_btn_marginTop"
        android:gravity="center"
        android:textColor="@color/font_color60"
        android:textSize="@dimen/describe_font_size2"/>
</LinearLayout>