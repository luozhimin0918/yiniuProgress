<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/flash_type1_padding"
              android:paddingRight="@dimen/flash_type1_padding"
              android:paddingTop="@dimen/flash_type1_padding">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/flash_type1_marginRight"
        android:maxLines="3"
        android:text="16:30"
        android:textColor="@color/font_color6"
        android:textSize="@dimen/describe_font_size2"
        />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈哈哈
            哈
            哈
            啊
            哈哈哈哈
            哈
            哈哈哈哈哈哈哈哈"
            android:textSize="@dimen/content_font_size"/>

        <ImageView
            android:id="@+id/iv_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/flash_type4_imgTop"
            android:minHeight="74dp"
            android:minWidth="110dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_def_news"
            android:visibility="gone"/>

        <include layout="@layout/layout_flash_bottom_bar"/>
    </LinearLayout>

</LinearLayout>