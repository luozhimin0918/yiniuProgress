<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_image_height"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/iv_blur_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <com.jyh.kxt.base.custom.RoundImageView
            android:id="@+id/riv_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            app:outsideRound="true"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/riv_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="糯米"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_item_height"
        android:gravity="center"
        android:onClick="clickHeaderItem"
        android:text="我的收藏"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_item_height"
        android:gravity="center"
        android:onClick="clickHeaderItem"
        android:text="我的评论"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_item_height"
        android:gravity="center"
        android:text="我的回复"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_item_height"
        android:onClick="clickHeaderItem"
        android:gravity="center"
        android:text="我的活动"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_item_height"
        android:gravity="center"
        android:onClick="clickHeaderItem"
        android:text="推荐给好友"/>

</LinearLayout>
