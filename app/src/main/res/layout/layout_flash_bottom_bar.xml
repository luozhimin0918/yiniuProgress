<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/flash_bottom_padding"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/flash_bottom_height"
        android:textSize="@dimen/content_font_size"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:id="@+id/tv_more"/>
    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="@dimen/flash_bottom_width"
        android:layout_height="@dimen/flash_bottom_height"/>

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="@dimen/flash_bottom_height"
        android:layout_height="@dimen/flash_bottom_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/flash_bottom_padding2"
        android:src="@mipmap/icon_flash_share"/>

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="@dimen/flash_bottom_height"
        android:layout_height="@dimen/flash_bottom_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/flash_bottom_padding3"
        android:background="@drawable/sel_flash_item_collect"/>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/iv_more"
        android:layout_marginTop="@dimen/flash_bottom_padding"
        android:background="@color/line_color2"
        />

</RelativeLayout>