<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/flash_bottom_padding"
    >

    <LinearLayout
        android:id="@+id/ll_more"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/flash_bottom_height"
            android:layout_centerVertical="true"
            android:text="展开"
            android:textColor="@color/font_color6"
            android:gravity="center"
            android:textSize="@dimen/content_font_size"/>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="@dimen/flash_bottom_imgWidth"
            android:layout_height="@dimen/flash_bottom_imgHeight"
            android:layout_marginTop="4dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/flash_bottom_padding"
            android:layout_toRightOf="@id/tv_more"
            android:background="@drawable/bg_flash_show_hide"/>
    </LinearLayout>



    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="@dimen/flash_bottom_height"
        android:layout_height="@dimen/flash_bottom_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/flash_bottom_padding2"
        android:src="@mipmap/icon_flash_share"/>

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="@dimen/flash_bottom_height"
        android:layout_height="@dimen/flash_bottom_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/flash_bottom_padding3"
        android:background="@drawable/sel_flash_item_collect"/>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/iv_share"
        android:layout_marginTop="@dimen/flash_bottom_padding"
        android:background="@color/line_color2"
        />

</RelativeLayout>