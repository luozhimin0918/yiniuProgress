<?xml version="1.0" encoding="utf-8"?>
<com.library.widget.PageLoadLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pll_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_video_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme1"
        android:baselineAligned="false"
        android:orientation="vertical"
        tools:context="com.jyh.kxt.av.ui.VideoDetailActivity">

        <com.superplayer.library.SuperPlayer
            android:id="@+id/view_super_player"
            android:layout_width="match_parent"
            android:layout_height="@dimen/av_video_height"
            android:background="@color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/videoTitleHeight"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/videoTitlePadding"
            android:paddingRight="@dimen/videoTitlePadding">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/tv_playCount"
                android:layout_toStartOf="@+id/tv_playCount"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/font_color5"
                android:textSize="@dimen/content_font_size"/>

            <TextView
                android:id="@+id/tv_playCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/icon_video_play_small"
                android:drawablePadding="@dimen/videoTitlePlayCountPadding"
                android:textColor="@color/font_color6"
                android:textSize="@dimen/describe_font_size3"/>
        </RelativeLayout>

        <com.library.widget.handmark.PullToRefreshListView
            android:id="@+id/rv_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/videoNavHeight"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_break"
                style="@style/Audio_RB_Style"
                android:src="@mipmap/icon_nav_break"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@mipmap/icon_nav_commend"/>

                <View
                    android:id="@+id/view_zw"
                    android:layout_width="1dp"
                    android:layout_centerInParent="true"
                    android:layout_height="1dp"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_zw"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_read_count"
                    android:textColor="@color/white"
                    android:textSize="@dimen/min_min_font_size"
                    android:id="@+id/tv_commentCount"/>
            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_collect"
                style="@style/Audio_RB_Style"
                android:src="@mipmap/icon_nav_collect_unsel"/>

            <ImageView
                android:id="@+id/iv_like"
                style="@style/Audio_RB_Style"
                android:src="@mipmap/icon_nav_like_unsel"/>

            <ImageView
                android:id="@+id/iv_share"
                style="@style/Audio_RB_Style"
                android:src="@mipmap/icon_nav_share"/>

        </LinearLayout>


    </LinearLayout>

</com.library.widget.PageLoadLayout>