<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_video_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jyh.kxt.av.ui.VideoDetailActivity">

    <com.superplayer.library.SuperPlayer
        android:id="@+id/view_super_player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/av_video_height"
        android:background="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/videoTitleHeight"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/videoTitlePadding"
        android:paddingRight="@dimen/videoTitlePadding">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017 黄金开门红 新年新牛市"
            android:textColor="@color/font_color5"
            android:textSize="@dimen/content_font_size"/>

        <TextView
            android:id="@+id/tv_playCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/icon_video_play_small"
            android:drawablePadding="@dimen/videoTitlePlayCountPadding"
            android:text="1855"
            android:textColor="@color/font_color6"
            android:textSize="@dimen/describe_font_size3"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_color2"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/videoNavHeight"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_break"
            style="@style/Audio_RB_Style"
            android:src="@mipmap/icon_video_nav_break"/>

        <ImageView
            android:id="@+id/iv_comment"
            style="@style/Audio_RB_Style"
            android:src="@mipmap/icon_video_nav_commend"/>

        <ImageView
            android:id="@+id/iv_collect"
            style="@style/Audio_RB_Style"
            android:src="@mipmap/icon_video_nav_collect"/>

        <ImageView
            android:id="@+id/iv_like"
            style="@style/Audio_RB_Style"
            android:src="@mipmap/icon_video_nav_like"/>

        <ImageView
            android:id="@+id/iv_share"
            style="@style/Audio_RB_Style"
            android:src="@mipmap/icon_video_nav_share"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_reply_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我来说两句"/>
    </LinearLayout>

</LinearLayout>
