<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme1"
    android:orientation="vertical"
    >

    <include layout="@layout/action_bar1"/>

    <com.library.widget.PageLoadLayout
        android:id="@+id/pl_rootView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.library.widget.handmark.PullToRefreshListView
            android:id="@+id/plv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.library.widget.PageLoadLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/font_color3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/videoNavHeight"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_break"
            style="@style/Audio_RB_Style"
            android:src="@mipmap/icon_nav_break"/>

        <ImageView
            android:id="@+id/iv_collect"
            style="@style/Audio_RB_Style"
            android:src="@drawable/sel_nav_collect"/>

        <ImageView
            android:id="@+id/iv_share"
            style="@style/Audio_RB_Style"
            android:src="@mipmap/icon_nav_share"/>

        <ImageView
            android:id="@+id/iv_more"
            style="@style/Audio_RB_Style"
            android:src="@mipmap/icon_nav_theme"/>


    </LinearLayout>


</LinearLayout>