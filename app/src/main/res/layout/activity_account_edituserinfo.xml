<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/action_bar1"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_photo"
                    style="@style/EditUserInfoItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:gravity="center"
                        android:text="头像"
                        android:textColor="@color/font_color1"
                        android:textSize="@dimen/editUserInfo_textSize1"/>

                    <ImageView
                        android:layout_width="@dimen/item_height"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="1dp"
                        android:padding="@dimen/editUserInfo_padding1"
                        android:src="@mipmap/ico_break"/>

                    <com.jyh.kxt.base.custom.RoundImageView
                        android:id="@+id/iv_photo"
                        android:layout_width="@dimen/item_height"
                        android:layout_height="@dimen/item_height"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="@dimen/item_height"
                        app:outsideRound="true"
                        android:padding="@dimen/editUserInfo_padding2"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_color2"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_nickname"
                    style="@style/EditUserInfoItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:gravity="center"
                        android:text="昵称"
                        android:textColor="@color/font_color1"
                        android:textSize="@dimen/editUserInfo_textSize1"/>

                    <ImageView
                        android:layout_width="@dimen/item_height"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="1dp"
                        android:padding="@dimen/editUserInfo_padding1"
                        android:src="@mipmap/ico_break"/>

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="@dimen/item_height"
                        android:gravity="center"
                        android:src="@mipmap/ic_launcher"
                        android:text="张三"
                        android:textColor="@color/font_color2"
                        android:textSize="@dimen/editUserInfo_textSize2"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_color2"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_gender"
                    style="@style/EditUserInfoItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:gravity="center"
                        android:text="性别"
                        android:textColor="@color/font_color1"
                        android:textSize="@dimen/editUserInfo_textSize1"/>

                    <ImageView
                        android:layout_width="@dimen/item_height"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="1dp"
                        android:padding="@dimen/editUserInfo_padding1"
                        android:src="@mipmap/ico_break"/>

                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="@dimen/item_height"
                        android:gravity="center"
                        android:src="@mipmap/ic_launcher"
                        android:text="未知"
                        android:textColor="@color/font_color2"
                        android:textSize="@dimen/editUserInfo_textSize2"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_color2"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_birthday"
                    style="@style/EditUserInfoItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:gravity="center"
                        android:text="生日"
                        android:textColor="@color/font_color1"
                        android:textSize="@dimen/editUserInfo_textSize1"/>

                    <ImageView
                        android:layout_width="@dimen/item_height"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="1dp"
                        android:padding="@dimen/editUserInfo_padding1"
                        android:src="@mipmap/ico_break"/>

                    <TextView
                        android:id="@+id/tv_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="@dimen/item_height"
                        android:gravity="center"
                        android:src="@mipmap/ic_launcher"
                        android:text="1992-10-10"
                        android:textColor="@color/font_color2"
                        android:textSize="@dimen/editUserInfo_textSize2"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_color2"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_address"
                    style="@style/EditUserInfoItemStyle">

                    <TextView
                        android:id="@+id/tv_address_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:gravity="center"
                        android:text="现居住地"
                        android:textColor="@color/font_color1"
                        android:textSize="@dimen/editUserInfo_textSize1"/>

                    <ImageView
                        android:layout_width="@dimen/item_height"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="1dp"
                        android:padding="@dimen/editUserInfo_padding1"
                        android:src="@mipmap/ico_break"/>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="@dimen/item_height"
                        android:layout_toRightOf="@id/tv_address_title"
                        android:gravity="center_vertical|right"
                        android:src="@mipmap/ic_launcher"
                        android:text="上海-上海-浦东"
                        android:textColor="@color/font_color2"
                        android:textSize="@dimen/editUserInfo_textSize2"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_color2"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_work"
                    style="@style/EditUserInfoItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="行业"
                        android:textColor="@color/font_color1"
                        android:textSize="@dimen/editUserInfo_textSize1"/>

                    <ImageView
                        android:layout_width="@dimen/item_height"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/editUserInfo_padding1"
                        android:src="@mipmap/ico_break"/>

                    <TextView
                        android:id="@+id/tv_work"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/item_height"
                        android:gravity="center"
                        android:src="@mipmap/ic_launcher"
                        android:text="互联网"
                        android:textColor="@color/font_color2"
                        android:textSize="@dimen/editUserInfo_textSize2"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editUserInfo_line_height"
                    android:background="@color/line_color2"
                    />

                <RelativeLayout
                    android:id="@+id/rl_changePwd"
                    style="@style/EditUserInfoItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="修改密码"
                        android:textColor="@color/font_color1"
                        android:textSize="@dimen/editUserInfo_textSize1"/>

                    <ImageView
                        android:layout_width="@dimen/item_height"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/editUserInfo_padding1"
                        android:src="@mipmap/ico_break"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editUserInfo_line_height"
                    android:background="@color/line_color2"
                    />

                <com.jyh.kxt.base.custom.DiscolorButton
                    android:id="@+id/btn_exit_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editUserInfo_btn_height"
                    android:layout_marginLeft="@dimen/editUserInfo_btn_marginHorizontal"
                    android:layout_marginRight="@dimen/editUserInfo_btn_marginHorizontal"
                    android:layout_marginTop="@dimen/editUserInfo_btn_marginTop"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textSize="@dimen/editUserInfo_textSize2"
                    app:clickFontColor="@color/red_btn_bg_pressed_color"
                    app:cornerRadius="@dimen/editUserInfo_btn_cornerRadius"
                    app:defaultBackground="@color/line_color2"
                    app:defaultFontColor="@color/red_btn_bg_color"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>