<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/contentPadding">


        <com.jyh.kxt.base.custom.RoundImageView
            android:id="@+id/riv_avatar"
            android:layout_width="@dimen/userPhotoSize1"
            android:layout_height="@dimen/userPhotoSize1"
            android:layout_marginRight="@dimen/contentPadding"
            android:src="@mipmap/icon_user_def_photo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="系统消息"
                android:textColor="@color/font_color1"
                android:textSize="@dimen/content_font_size"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息"
                android:textColor="@color/font_color1"
                android:autoLink="web"
                android:textSize="@dimen/content_font_size"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="11:11"
                android:textColor="@color/font_color1"
                android:textSize="@dimen/content_font_size"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color3"
        />

</LinearLayout>