<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent_black"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/browerHistoryClearPopWidth"
        android:layout_height="@dimen/browerHistoryClearPopHeight"
        android:background="@drawable/bg_pop"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="清除浏览历史记录"
            android:textColor="@color/font_color5"
            android:textSize="@dimen/title_font_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/browerHistoryClearPopBtnHeight"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/font_color5"
                android:textSize="@dimen/content_font_size2"
                />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_color3"/>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/font_color8"
                android:textSize="@dimen/content_font_size2"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>