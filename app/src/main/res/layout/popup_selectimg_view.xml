<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/selectimg_open_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#a0000000"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/photo_padding1"
        android:paddingRight="@dimen/photo_padding1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_height1"
            android:background="@drawable/bg_pop"
            android:orientation="vertical">


            <TextView
                android:id="@+id/selectimg_open_take"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="拍照"
                android:textColor="@color/font_color8"
                android:textSize="@dimen/max_font_size"/>


            <View
                android:id="@+id/vv"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_background"/>

            <TextView
                android:id="@+id/selectimg_open_differ"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="从相册上传"
                android:textColor="@color/font_color8"
                android:textSize="@dimen/max_font_size"/>

        </LinearLayout>

        <TextView
            android:id="@+id/selectimg_open_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_height2"
            android:layout_marginTop="@dimen/photo_margin1"
            android:background="@drawable/bg_pop"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/font_color8"
            android:textSize="@dimen/max_font_size"/>


    </LinearLayout>

    <Space
        android:id="@+id/selectimg_open_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</RelativeLayout>
