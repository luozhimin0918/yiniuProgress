<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/combinedchart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

    </com.github.mikephil.charting.charts.CombinedChart>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kline_tv_ma5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/kline_tv_ma10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/kline_tv_ma30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kline_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color2"
            android:text="2017年7月20日 12:00:41"
            android:textSize="7sp"/>

        <TextView
            android:id="@+id/kline_tv_kaipan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color2"
            android:text="开盘价: "
            android:textSize="7sp"/>

        <TextView
            android:id="@+id/kline_tv_zuigao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color2"
            android:text="最高价: "
            android:textSize="7sp"/>

        <TextView
            android:id="@+id/kline_tv_zuidi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最低价: "
            android:textColor="@color/font_color2"
            android:textSize="7sp"/>

        <TextView
            android:id="@+id/kline_tv_shoupan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color2"
            android:text="收盘价: "
            android:textSize="7sp"/>

    </LinearLayout>
</RelativeLayout>