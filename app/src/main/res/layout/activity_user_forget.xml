<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/line_color2"
              android:orientation="vertical">

    <include layout="@layout/action_bar1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:paddingLeft="24dp"
        android:text="系统将发送邮件至："
        android:textColor="@color/font_color5"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_user_login_close"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="该邮箱未注册"
        android:paddingLeft="24dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/font_color11"
        />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        />
</LinearLayout>