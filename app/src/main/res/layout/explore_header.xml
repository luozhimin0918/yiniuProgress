<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/explore_header_title_height"
        android:layout_marginTop="@dimen/explore_header_marginTop">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/explore_header_title_padding"
            android:drawableLeft="@mipmap/iocn_blue_sx"
            android:gravity="center"
            android:text="专题"
            android:textColor="@color/font_color60"
            android:textSize="@dimen/content_font_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv1"
            android:drawableLeft="@mipmap/icon_blue_dian"
            android:drawablePadding="@dimen/explore_header_title_padding"
            android:gravity="center"
            android:text="美国大选"
            android:textColor="@color/font_color60"
            android:textSize="@dimen/content_font_size"/>


        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/explore_header_content_padding"
            android:src="@mipmap/icon_explore_more"
            />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_more"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="更多"
            android:textColor="@color/font_color6"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/explore_header_content_padding"/>
</LinearLayout>