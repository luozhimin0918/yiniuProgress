<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/searchItemPadding2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/explore_more_padding2"
        android:background="@drawable/bg_contour"
        android:orientation="vertical"
        android:paddingBottom="@dimen/explore_more_padding2"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        >

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/explore_more_activity_img_height"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_def_video"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/explore_more_padding1"
            android:layout_marginRight="@dimen/explore_more_padding3"
            android:layout_marginTop="@dimen/explore_more_padding2"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/font_color5"
            android:textSize="@dimen/content_font_size2"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/explore_more_padding1"
            android:layout_marginRight="@dimen/explore_more_padding3"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/font_color6"
            android:textSize="@dimen/describe_font_size3"
            />

    </LinearLayout>

</LinearLayout>