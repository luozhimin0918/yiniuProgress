<?xml version="1.0" encoding="utf-8"?>
<com.library.widget.PageLoadLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pl_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_news_author_bg"
            android:orientation="vertical"
            android:paddingTop="@dimen/authorActionBarHeight"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionbar_height">

                <ImageView
                    android:id="@+id/iv_break"
                    android:layout_width="@dimen/actionbar_height"
                    android:layout_height="match_parent"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:src="@mipmap/icon_news_author_break"
                    />

                <View
                    android:id="@+id/v_like"
                    android:layout_width="@dimen/newsAuthorAttentionWidth"
                    android:layout_height="@dimen/newsAuthorAttentionHeight"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/newsContentPadding3"
                    android:background="@drawable/sel_news_author_attention"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/authorMarginTop"
                android:paddingLeft="@dimen/newsContentPadding3"
                android:paddingRight="@dimen/newsContentPadding3">

                <com.jyh.kxt.base.custom.RoundImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="@dimen/authorPhotoSize"
                    android:layout_height="@dimen/authorPhotoSize"
                    android:layout_marginRight="@dimen/newsContentPadding3"
                    android:src="@mipmap/ico_def_load"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_photo"
                    android:text="马克.dsadas"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_font_size2"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="@dimen/newsContentPadding3"
                    android:layout_toRightOf="@id/iv_photo"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_fans"
                        style="@style/AuthorTextViewStyle"
                        android:text="粉丝 111"/>

                    <View
                        android:layout_width="2px"
                        android:layout_height="12dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/font_color14"/>

                    <TextView
                        android:id="@+id/tv_article"
                        style="@style/AuthorTextViewStyle"
                        android:text="文章 222"
                        />
                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp"
                android:layout_marginLeft="@dimen/newsContentPadding3"
                android:layout_marginRight="@dimen/newsContentPadding3"
                android:layout_marginTop="16dp"
                android:text="简介:哈哈哈哈哈哈哈哈啊哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈啊哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈啊哈哈哈哈哈哈哈哈哈哈哈哈哈"
                android:textColor="@color/font_color15"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_error"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:orientation="horizontal"
            android:background="@mipmap/icon_news_author_bg"
            android:paddingTop="@dimen/authorActionBarHeight">

            <ImageView
                android:id="@+id/iv_break2"
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="match_parent"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:src="@mipmap/icon_news_author_break"
                />
        </LinearLayout>

        <com.library.widget.PageLoadLayout
            android:id="@+id/pl_list_rootView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.library.widget.handmark.PullToRefreshListView
                android:id="@+id/pl_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.library.widget.PageLoadLayout>

    </LinearLayout>

</com.library.widget.PageLoadLayout>