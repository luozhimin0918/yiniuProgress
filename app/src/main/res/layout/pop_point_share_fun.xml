<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme1"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iv_pyq"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/icon_share_qyq"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="@color/font_color3"/>

            <TextView
                android:id="@+id/iv_wxhy"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/icon_share_wx"
                android:gravity="center"
                android:text="微信好友"
                android:textColor="@color/font_color3"/>

            <TextView
                android:id="@+id/iv_xl"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/icon_share_sina"
                android:gravity="center"
                android:text="新浪"
                android:textColor="@color/font_color3"/>

            <TextView
                android:id="@+id/iv_qq"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/icon_share_qq"
                android:gravity="center"
                android:text="QQ"
                android:textColor="@color/font_color3"/>

            <TextView
                android:id="@+id/iv_qq_kj"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/icon_share_zone"
                android:gravity="center"
                android:text="QQ空间"
                android:textColor="@color/font_color3"/>
        </LinearLayout>
    </HorizontalScrollView>

    <include layout="@layout/view_line"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iv_fun_url"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/icon_point_url"
            android:gravity="center"
            android:text="复制链接"
            android:textColor="@color/font_color3"/>

        <TextView
            android:id="@+id/iv_fun_jb"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/icon_point_jb"
            android:gravity="center"
            android:text="举报"
            android:textColor="@color/font_color3"/>

        <TextView
            android:id="@+id/iv_fun_qx"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/icon_point_qx"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/font_color3"/>
    </LinearLayout>

</LinearLayout>