<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme1">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iv_pyq"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:textColor="@color/font_color3"
                android:drawableTop="@mipmap/icon_share_qyq"
                android:gravity="center"
                android:text="朋友圈"/>

            <TextView
                android:id="@+id/iv_wxhy"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:textColor="@color/font_color3"
                android:drawableTop="@mipmap/icon_share_wx"
                android:gravity="center"
                android:text="微信好友"/>

            <TextView
                android:id="@+id/iv_xl"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color3"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/icon_share_sina"
                android:gravity="center"
                android:text="微博"/>

            <TextView
                android:id="@+id/iv_qq"
                android:layout_width="80dp"
                android:textColor="@color/font_color3"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/icon_share_qq"
                android:gravity="center"
                android:text="QQ"/>

            <TextView
                android:id="@+id/iv_qq_kj"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:textColor="@color/font_color3"
                android:drawableTop="@mipmap/icon_share_zone"
                android:gravity="center"
                android:text="QQ空间"/>
        </LinearLayout>
    </HorizontalScrollView>
</FrameLayout>